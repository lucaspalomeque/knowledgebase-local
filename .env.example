# ================================
# Local RAG Weekend - Environment Configuration
# ================================

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=300

# Model Configuration
DEFAULT_MODEL=adrienbrault/nous-hermes2-mistral:7b-dpo
FALLBACK_MODEL=phi3.5:latest
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Hardware Configuration
DEVICE=auto
GPU_LAYERS=32
MAX_CONCURRENT_REQUESTS=2

# Application Settings
LOG_LEVEL=INFO
DEBUG_MODE=false
CACHE_ENABLED=true

# Data Paths
DATA_DIR=./data
UPLOADS_DIR=./data/uploads
CHROMADB_DIR=./data/chromadb
CACHE_DIR=./data/cache
LOGS_DIR=./data/logs

# Vector Database Settings
COLLECTION_NAME=weekend_rag
CHUNK_SIZE=800
CHUNK_OVERLAP=150
MAX_RETRIEVAL_DOCS=4
SIMILARITY_THRESHOLD=0.6

# LLM Settings
CONTEXT_LENGTH=4096
TEMPERATURE=0.1
MAX_TOKENS=512

# Performance Settings
EMBEDDING_BATCH_SIZE=32
VECTOR_SEARCH_TIMEOUT=30
LLM_TIMEOUT=120

# UI Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost
ENABLE_WIDE_MODE=true

# Security (for future use)
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8502

# Development
RELOAD_ON_CHANGE=true
PROFILE_PERFORMANCE=false
